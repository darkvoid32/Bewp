<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/screenOrientation_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:text="Screen Orientation"
        android:padding="30dp"
        android:textColor="#000"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screenOrientation_textView"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/screenOrientation_portraitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/screenOrientation_landscapeButton"
            android:background="@android:color/transparent"
            android:text="Portrait"
            android:fontFamily="sans-serif"
            android:textSize="15dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/screenOrientation_landscapeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Landscape"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif"
            android:textSize="15dp"
            android:background="@android:color/transparent" />
    </LinearLayout>
</RelativeLayout>